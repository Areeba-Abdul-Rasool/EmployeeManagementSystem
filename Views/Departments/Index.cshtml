@model IEnumerable<EmployeeManagementSystem.Models.Department>
@{
    ViewBag.Title = "Departments";
}

<h2 class="mb-4">Department List</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New Department", "Create", null, new { @class = "btn btn-success" })
    </p>
}

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Location)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dept in Model)
        {
            <tr>
                <td>@dept.Name</td>
                <td>@dept.Location</td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = dept.DepartmentID }, new { @class = "btn btn-info btn-sm" })
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = dept.DepartmentID }, new { @class = "btn btn-warning btn-sm mx-1" })
                        @Html.ActionLink("Delete", "Delete", new { id = dept.DepartmentID }, new { @class = "btn btn-danger btn-sm" })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
